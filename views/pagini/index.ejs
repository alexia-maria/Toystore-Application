        <section id="vandute">
          <div style="overflow-y: auto; width: 100%">
            <table id="jucarii" width="500px">
              <thead>
                <tr>
                  <th>Tip</th>
                  <th>Jucarie</th>
                  <th>Pret</th>
                  <th>Varsta</th>
